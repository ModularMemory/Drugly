<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:design="clr-namespace:Drugly.AvaloniaApp.Design"
        xmlns:windows="clr-namespace:Drugly.AvaloniaApp.ViewModels.Windows"
        mc:Ignorable="d"
        Width="1400" Height="900"
        x:Class="Drugly.AvaloniaApp.Views.Windows.MainWindow"
        x:DataType="windows:MainWindowViewModel"
        d:DataContext="{x:Static design:DesignData.MainWindowViewModel}"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}">

    <ContentControl Content="{Binding ContentViewModel}" />

</Window>