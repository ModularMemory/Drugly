<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:suki="https://github.com/kikipoulet/SukiUI"
        xmlns:vm="clr-namespace:Drugly.AvaloniaApp.ViewModels"
        xmlns:design="clr-namespace:Drugly.AvaloniaApp.Design"
        mc:Ignorable="d"
        Width="600" Height="350"
        MinWidth="600" MinHeight="350"
        x:Class="Drugly.AvaloniaApp.Views.StartupWindow"
        x:DataType="vm:StartupWindowViewModel"
        d:DataContext="{x:Static design:DesignData.StartupWindowViewModel}"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}">
    <suki:SukiMainHost Name="MainHost"
                       PointerPressed="SukiMainHost_OnPointerPressed">
        <StackPanel Margin="10"
                    Spacing="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Text="Welcome to Avalonia!" />

            <TextBox Watermark="Key..."
                     Text="{Binding KeyText}"
                     Width="250"
                     suki:TextBoxExtensions.AddDeleteButton="True" />

            <Button Classes="Flat"
                    Content="Login"
                    Width="100"
                    Command="{Binding ButtonClickCommand}" />
        </StackPanel>
    </suki:SukiMainHost>
</Window>