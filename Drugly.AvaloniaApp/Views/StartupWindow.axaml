<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:suki="https://github.com/kikipoulet/SukiUI"
        xmlns:vm="clr-namespace:Drugly.AvaloniaApp.ViewModels"
        xmlns:design="clr-namespace:Drugly.AvaloniaApp.Design"
        mc:Ignorable="d"
        Width="600" Height="350"
        MinWidth="600" MinHeight="350"
        x:Class="Drugly.AvaloniaApp.Views.StartupWindow"
        x:DataType="vm:StartupWindowViewModel"
        d:DataContext="{x:Static design:DesignData.StartupWindowViewModel}"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}">
    <suki:SukiMainHost Name="MainHost"
                       BackgroundAnimationEnabled="False"
                       PointerPressed="SukiMainHost_OnPointerPressed">
        <suki:BusyArea IsBusy="{Binding LoggingIn}">
            <StackPanel Margin="10"
                        Spacing="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <TextBlock Text="Enter login info:"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <TextBox Watermark="Key..."
                         Text="{Binding KeyText, Mode=TwoWay}"
                         Width="250"
                         suki:TextBoxExtensions.AddDeleteButton="True" />

                <Button Classes="Flat"
                        Content="Login"
                        Width="100"
                        Command="{Binding ButtonClickCommand}" />
            </StackPanel>
        </suki:BusyArea>
    </suki:SukiMainHost>
</Window>